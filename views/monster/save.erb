<!DOCTYPE html>
<%#include "monster.h" %>
<% tfetch(QVariantMap, monster); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Monster</h1>

<%== formTag(urla("save", monster["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="monster[id]" value="<%= monster["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Space<br /><input type="text" name="monster[space]" value="<%= monster["space"] %>" /></label>
  </p>
  <p>
    <label>Hp<br /><input type="text" name="monster[hp]" value="<%= monster["hp"] %>" /></label>
  </p>
  <p>
    <label>Attack<br /><input type="text" name="monster[attack]" value="<%= monster["attack"] %>" /></label>
  </p>
  <p>
    <label>Name<br /><input type="text" name="monster[name]" value="<%= monster["name"] %>" /></label>
  </p>
  <p>
    <label>Battle<br /><input type="text" name="monster[battle]" value="<%= monster["battle"] %>" /></label>
  </p>
  <p>
    <label>Url<br /><input type="text" name="monster[url]" value="<%= monster["url"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", monster["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
