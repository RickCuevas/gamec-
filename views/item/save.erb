<!DOCTYPE html>
<%#include "item.h" %>
<% tfetch(QVariantMap, item); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Item</h1>

<%== formTag(urla("save", item["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="item[id]" value="<%= item["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Space<br /><input type="text" name="item[space]" value="<%= item["space"] %>" /></label>
  </p>
  <p>
    <label>Name<br /><input type="text" name="item[name]" value="<%= item["name"] %>" /></label>
  </p>
  <p>
    <label>Url<br /><input type="text" name="item[url]" value="<%= item["url"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", item["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
