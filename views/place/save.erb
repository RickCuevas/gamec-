<!DOCTYPE html>
<%#include "place.h" %>
<% tfetch(QVariantMap, place); %>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= controller()->name() + ": " + controller()->activeAction() %></title>
</head>
<body>
<p style="color: red"><%=$ error %></p>
<p style="color: green"><%=$ notice %></p>

<h1>Editing Place</h1>

<%== formTag(urla("save", place["id"]), Tf::Post) %>
  <p>
    <label>ID<br /><input type="text" name="place[id]" value="<%= place["id"] %>" readonly="readonly" /></label>
  </p>
  <p>
    <label>Space<br /><input type="text" name="place[space]" value="<%= place["space"] %>" /></label>
  </p>
  <p>
    <label>Name<br /><input type="text" name="place[name]" value="<%= place["name"] %>" /></label>
  </p>
  <p>
    <label>Url<br /><input type="text" name="place[url]" value="<%= place["url"] %>" /></label>
  </p>
  <p>
    <input type="submit" value="Save" />
  </p>
</form>

<%== linkTo("Show", urla("show", place["id"])) %> |
<%== linkTo("Back", urla("index")) %>
</body>
</html>
